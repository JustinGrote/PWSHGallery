{
  "configurations": [
    {
      "name": "Debug",
      "request": "launch",
      "runtimeArgs": [
        "run-script",
        "debug"
      ],
      "console": "integratedTerminal",
      "runtimeExecutable": "pnpm",
      "presentation": {
        "hidden": false,
        "group": "pnpm",
        "order": 1
      },
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "type": "node",
      "autoAttachChildProcesses": true,
			"name": "Test",
      "skipFiles": [
        "!node_modules/hono/**", // We want to debug these internals
        "**/node_modules/**", // exclude scripts in node_modules folders
        "<node_internals>/**"
      ],
      "request": "launch",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "runtimeExecutable": "pnpm",
      "cwd": "${workspaceFolder}",
      "args": [
        "test",
				"--"
			]
    }
  ]
}
